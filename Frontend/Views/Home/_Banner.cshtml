@model List<MainProject.Core.Banner>
    @{ 
        if (Model.Count == 0)
        {
            Model.Add(new MainProject.Core.Banner
            {
                Path = "/Content/resources/assets/banners/invest_2.jpg"
            });
        }
    }

<div class="swiper-container">
    <div class="swiper-wrapper">
        @foreach (var item in Model)
        {
            <div class="swiper-slide">
                <a href=@item.Link>
                    <img class="ofcv" src=@item.Path alt="" />
                </a>
            </div>
        }
    </div>
</div>