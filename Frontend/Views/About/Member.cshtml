@using MainProject.Core
@model MainProject.SBussiness.LandingPage.Models.News.AboutViewModel

@Html.Action("ShowMenu", "About")
<div class="about__company-members pd-70 ov-h">
	<div class="container">
		<div class="about__company-members-wrapper">
			<div class="row">
				@foreach (var item in (JsonHelper.Deserialize<List<Image>>(Model.Section1.Image) ?? new List<Image>()).OrderBy(x => x.Order))
				{
					<div class="col-6 col-md-4 fadeInUp wow">
						<div class="about__company-member__item">
							<a class="item__link" href=@item.Link>
								<div class="item__img"><img class="ofcv lazyload blur-up" data-src=@item.Path></div>
								<div class="item__description">
									<div class="item__label"><img class="lazyload blur-up" data-src="/Content/resources/assets/icons/antin_label.svg"></div>
									<h4 class="item__title tt-u">@item.Name</h4>
								</div>
							</a>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</div>
<div class="about-page" id="js-page-verify" hidden></div>